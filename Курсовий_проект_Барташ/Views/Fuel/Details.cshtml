@using Core.Entities
@using Core.Entities.Enum
@model FuelConsumption

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fuel Consumption Form</title>
</head>
<body>

    <form asp-action="/submit_fuel_consumption" method="post">
        <label asp-for="AutoBaseId">AutoBase ID:</label>
        <input asp-for="AutoBaseId" class="form-control" required><br>

        <label asp-for="Type">Fuel Type:</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<FuelType>()" class="form-control" required></select><br>

        <label asp-for="Volume">Volume:</label>
        <input asp-for="Volume" type="number" step="0.1" class="form-control" required><br>

        <label asp-for="Price">Price:</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required><br>

        <label asp-for="OperationType">Operation Type:</label>
        <select asp-for="OperationType" asp-items="Html.GetEnumSelectList<OperationType>()" class="form-control" required></select><br>

        @* <label asp-for="SupplierId">Supplier ID:</label>
        <input asp-for="SupplierId" class="form-control" required><br>

        <label asp-for="ClientId">Client ID:</label>
        <input asp-for="ClientId" class="form-control" required><br>

        <label asp-for="EmployeeId">Employee ID:</label>
        <input asp-for="EmployeeId" class="form-control" required><br> *@

        <input type="submit" value="Submit">
    </form>

</body>
</html>